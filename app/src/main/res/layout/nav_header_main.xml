<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <!--    android:background="@drawable/lovecoder_bg"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lovecoder2_bg"
        android:scaleType="fitXY"
        android:contentDescription="ss" />

    <TextView
        android:id="@+id/id_lovecoderversion"
        android:layout_below="@+id/id_lovecoderlable"
        android:layout_margin="@dimen/common_dimen_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0"
        android:layout_alignParentRight="true"
/>
    <TextView
        android:id="@+id/id_lovecoderlable"
        android:layout_margin="@dimen/common_dimen_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱媛猿"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


</RelativeLayout>
