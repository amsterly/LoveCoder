<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/common_dimen_mid"
    android:paddingBottom="@dimen/common_dimen_mid"
    android:paddingLeft="@dimen/common_dimen_big"
    android:background="@color/main_background"
    >
    <TextView
        android:id="@+id/date_week"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_weight="1"
        android:id="@+id/weather_status_daily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="多云转晴"
        />

    <ImageView
        style="@style/CommonIconImage"
        android:layout_weight="1"
        android:id="@+id/weather_icon_daily"
        android:gravity="center"
        android:src="@drawable/weather_big_rain"
        />

    <TextView
        android:layout_weight="1"
        android:id="@+id/temp_daily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/common_dimen_mid"
        android:gravity="center"
        android:text="15~23°"
        />

</LinearLayout>
